<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".donation.fragment.MyDonation_Fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.demo.donation.view.BoldTextView
            android:id="@+id/boldTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/top_title"
            android:layout_marginTop="@dimen/m10"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_16" />

        <GridLayout
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:layout_marginTop="@dimen/m25"
            android:columnOrderPreserved="false"
            android:padding="@dimen/m15"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/m5"
                app:cardBackgroundColor="@color/gray_2"
                app:cardCornerRadius="@dimen/m22"
                app:cardElevation="@dimen/m7">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m170"
                        android:src="@drawable/my_donation1"
                        android:layout_margin="@dimen/m10"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedCorners"
                        />
                        <com.demo.donation.view.BoldTextView
                            android:id="@+id/overlay_text"
                            android:layout_width="@dimen/m120"
                            android:layout_height="@dimen/m40"
                            android:text="@string/card_on_text_1"
                            android:textColor="@color/white"
                            android:textAlignment="gravity"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textSize="@dimen/text_12"
                            android:paddingTop="@dimen/m5"
                            android:paddingRight="@dimen/m15"
                            android:layout_marginRight="@dimen/m20"
                            android:layout_marginTop="@dimen/m20"
                            android:background="@drawable/rounded_background"
                            />

                        <com.demo.donation.view.BoldTextView
                            android:layout_width="@dimen/m120"
                            android:layout_height="wrap_content"
                            android:text="@string/card_on_text_2"
                            android:textColor="@color/white"
                            android:textAlignment="gravity"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textSize="@dimen/text_10"
                            android:paddingTop="@dimen/m10"
                            android:paddingLeft="@dimen/m5"
                            android:paddingRight="@dimen/m5"
                            android:layout_marginRight="@dimen/m20"
                            android:layout_marginTop="@dimen/m30"

                            />


                        <com.demo.donation.view.BoldTextView
                            android:id="@+id/overlay_text1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/m30"
                            android:text="@string/donation_count"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_14"
                            android:paddingLeft="@dimen/m5"
                            android:paddingRight="@dimen/m5"
                            android:background="@drawable/rounded_background"
                            android:layout_marginTop="@dimen/m140"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_marginRight="@dimen/m20"
                            android:paddingStart="@dimen/m30"
                            android:paddingTop="@dimen/m5"
                            app:icon="@drawable/user_2"
                            />
                    </FrameLayout>

                    <com.demo.donation.view.BoldTextView
                        android:layout_width="@dimen/m150"
                        android:layout_height="wrap_content"
                        android:text="@string/my_donation_card_text1"
                        android:layout_marginStart="@dimen/m10"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        />
                    <com.demo.donation.view.BoldTextView
                        android:id="@+id/text2"
                        android:layout_width="@dimen/m100"
                        android:layout_height="wrap_content"
                        android:text="@string/my_donation_card_text1"
                        android:layout_marginStart="@dimen/m10"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        />



                    <View
                        android:id="@+id/line_1"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/m10"
                        android:layout_height="@dimen/m1"
                        android:layout_marginTop="@dimen/m10"
                        android:background="@color/white"
                        android:layout_marginStart="@dimen/m10"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ProgressBar
                            android:id="@+id/progressBar_1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/m50"
                            android:layout_height="@dimen/m50"
                            android:progressDrawable="@drawable/progress_round"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/m10"
                            android:max="100"
                            android:progress="70"
                            android:indeterminate="false" />


                        <TextView
                            android:id="@+id/textViewProgress_2"
                            android:layout_width="@dimen/m30"
                            android:layout_height="@dimen/m30"
                            android:text="70%"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/m28"
                            android:textColor="@color/blue"
                            android:paddingLeft="@dimen/m5"
                            android:textSize="12sp" />

                    </RelativeLayout>


                    <com.demo.donation.view.BoldTextView
                        android:id="@+id/doler_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doler_1"
                        android:layout_marginTop="@dimen/m_40"
                        android:layout_marginStart="@dimen/m20"
                        android:text="@string/doler_1"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold" />
                    <com.demo.donation.view.BoldTextView
                        android:layout_below="@+id/doler_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/m20"
                        android:text="@string/my_donation_card_text2"
                        android:textColor="@color/gray"
                        android:textStyle="bold"  />

                    <com.demo.donation.view.BoldTextView
                        android:id="@+id/doler_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="gravity"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/m30"
                        android:layout_marginTop="@dimen/m_30"
                        android:text="@string/doler_2"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold" />


                    <com.demo.donation.view.BoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doler_2"
                        android:text="@string/my_donation_card_text3"
                        android:textAlignment="gravity"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textSize="@dimen/text_12"
                      android:layout_marginRight="@dimen/m30"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </GridLayout>
        <GridLayout
            android:id="@+id/card_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:layout_below="@+id/card_1"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="@dimen/m70"
            android:paddingStart="@dimen/m15"
            android:layout_marginEnd="@dimen/m15"
            android:rowCount="3">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/m5"
                app:cardBackgroundColor="@color/gray_2"
                app:cardCornerRadius="@dimen/m22"
                app:cardElevation="@dimen/m7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/m170"
                            android:src="@drawable/my_donation2"
                            android:layout_margin="@dimen/m10"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/RoundedCorners"
                            />
                        <com.demo.donation.view.BoldTextView
                            android:id="@+id/overlay_text_2"
                            android:layout_width="@dimen/m120"
                            android:layout_height="@dimen/m40"
                            android:text="@string/card_on_text_1"
                            android:textColor="@color/white"
                            android:textAlignment="gravity"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textSize="@dimen/text_12"
                            android:paddingTop="@dimen/m5"
                            android:paddingRight="@dimen/m15"
                            android:layout_marginRight="@dimen/m20"
                            android:layout_marginTop="@dimen/m20"
                            android:background="@drawable/rounded_background"
                            />

                        <com.demo.donation.view.BoldTextView
                            android:layout_width="@dimen/m120"
                            android:layout_height="wrap_content"
                            android:text="@string/card_on_text_2"
                            android:textColor="@color/white"
                            android:textAlignment="gravity"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textSize="@dimen/text_10"
                            android:paddingTop="@dimen/m10"
                            android:paddingLeft="@dimen/m5"
                            android:paddingRight="@dimen/m5"
                            android:layout_marginRight="@dimen/m20"
                            android:layout_marginTop="@dimen/m30"

                            />


                        <com.demo.donation.view.BoldTextView
                            android:id="@+id/overlay_text2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/m30"
                            android:text="@string/donation_count"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_14"
                            android:paddingLeft="@dimen/m5"
                            android:paddingRight="@dimen/m5"
                            android:background="@drawable/rounded_background"
                            android:layout_marginTop="@dimen/m140"
                            android:layout_marginLeft="@dimen/m20"
                            android:layout_marginRight="@dimen/m20"
                            android:paddingStart="@dimen/m30"
                            android:paddingTop="@dimen/m5"
                            app:icon="@drawable/user_2"
                            />
                    </FrameLayout>


                    <com.demo.donation.view.BoldTextView
                        android:layout_width="@dimen/m150"
                        android:layout_height="wrap_content"
                        android:text="@string/my_donation_card_text1"
                        android:layout_marginStart="@dimen/m10"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold"
                        />
                    <com.demo.donation.view.BoldTextView
                        android:id="@+id/card2_text2"
                        android:layout_width="@dimen/m100"
                        android:layout_height="wrap_content"
                        android:text="@string/my_donation_card_text1"
                        android:layout_marginStart="@dimen/m10"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        />

                    <View
                        android:id="@+id/card2_line_1"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/m10"
                        android:layout_height="@dimen/m1"
                        android:layout_marginTop="@dimen/m10"
                        android:background="@color/white"
                        android:layout_marginStart="@dimen/m10"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ProgressBar
                            android:id="@+id/progressBar_2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="@dimen/m50"
                            android:layout_height="@dimen/m50"
                            android:progressDrawable="@drawable/progress_round"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/m10"
                            android:max="100"
                            android:progress="70"
                            android:indeterminate="false" />


                        <TextView
                            android:id="@+id/ViewProgress_2"
                            android:layout_width="@dimen/m30"
                            android:layout_height="@dimen/m30"
                            android:text="70%"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/m28"
                            android:textColor="@color/blue"
                            android:paddingLeft="@dimen/m5"
                            android:textSize="12sp" />

                    </RelativeLayout>


                    <com.demo.donation.view.BoldTextView
                        android:id="@+id/card2_doler_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/doler_1"
                        android:layout_marginTop="@dimen/m_40"
                        android:layout_marginStart="@dimen/m20"
                        android:text="@string/doler_1"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold" />
                    <com.demo.donation.view.BoldTextView
                        android:layout_below="@+id/card2_doler_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12"
                        android:layout_marginStart="@dimen/m20"
                        android:text="@string/my_donation_card_text2"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />

                    <com.demo.donation.view.BoldTextView
                        android:id="@+id/doler2_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="gravity"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/m30"
                        android:layout_marginTop="@dimen/m_30"
                        android:text="@string/doler_2"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold" />


                    <com.demo.donation.view.BoldTextView
                        android:layout_width="@dimen/m50"
                        android:layout_height="@dimen/text_18"
                        android:layout_below="@+id/doler_2"
                        android:text="@string/my_donation_card_text3"
                        android:textAlignment="gravity"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textSize="@dimen/text_12"
                        android:layout_marginRight="@dimen/m30"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>



</RelativeLayout>
</ScrollView>